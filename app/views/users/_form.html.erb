<div class="text-field username">
  <%= form.label :username %>
  <%= form.text_field :username, type: 'username' %>
</div>

<div class="text-field full-name">
  <%= form.label :full_name %>
  <%= form.text_field :full_name, type: 'full_name' %>
</div>

<div class="text-field email">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field password">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
