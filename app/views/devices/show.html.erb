<h1>Device: <%= @device.name %></h1>
<%= link_to '[Edit]', edit_device_path(@device) %> | <%= link_to '[New Window]', new_device_browser_window_path(@device) %>
<hr />
<h2><%= @device.name %> Windows:</h2>

<% windows = @device.browser_windows %>
<% unless windows.blank? %>
	<ol>
		<% windows.sort.each do |bw| %>
			<li><%= link_to device_browser_window_path(@device, bw.id) do %>
					<em>(<%= bw.id %>)</em> &mdash; <em><%= bw.private? %>
				<% end %>
			</li>
		<% end %>
	</ol>
<% end %>